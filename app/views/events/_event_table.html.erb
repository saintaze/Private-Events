
<table class="table table-hover table-sm">
  <thead>
   <tr>
      <th scope="col" style="width: 6%">Id</th>
      <th scope="col" style="width: 14%">Date</th>
      <th scope="col" style="width: 29%">Title</th>
      <th scope="col" style="width: 25%">Location</th>
      <th scope="col" style="width: 12%">Host</th>
      <th scope="col" style="width: 14%">Guests</th>
    </tr>
  </thead>
  <tbody>
    <tr><td colspan="6" class="h5 py-3">Past</td></tr>
    <% if @user.send("#{event}_past_events").count > 0 %>
      <% @user.send("#{event}_past_events").each do |event| %>
        <tr>
          <td scope="row"><%= link_to event.id, event_path(event) %></td>
          <td><%= event.date.strftime('%d %b %Y') %></td>
          <td><%= link_to event.title, event_path(event) %></td>
          <td><%= event.location %></td>
          <td><%= link_to event.creator.name.titlecase, user_path(event.creator) %></td>
          <td ><%= link_to event.attendees.count, event_path(event)  %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><td colspan="6" class="py-3">No past events to show :)</td></tr>
    <% end %>
    
    <tr><td colspan="6" class="h5 py-3">Upcoming</td></tr>
     <% if @user.send("#{event}_future_events").count > 0 %>
      <% @user.send("#{event}_future_events").each do |event| %>
        <tr>
          <td scope="row"><%= link_to event.id, event_path(event) %></td>
          <td><%= event.date.strftime('%d %b %Y') %></td>
          <td><%= link_to event.title, event_path(event) %></td>
          <td><%= event.location %></td>
          <td><%= link_to event.creator.name.titlecase, user_path(event.creator) %></td>
          <td ><%= link_to event.attendees.count, event_path(event)  %></td>
        </tr>
      <% end %>
    <% else %>
      <tr><td colspan="6" class="py-3">No upcoming events to show :(</td></tr>
    <% end %>
  </tbody>
</table> 