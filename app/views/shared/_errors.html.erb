<% if false %>
  <div class="alert alert-danger">
    <strong>Oh Snap!</strong>
    The form contains <%= pluralize(object.errors.count, 'error') %>
  </div>
  <ul class="error-messages">
   <% object.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
   <% end%>
  </ul>
<% end %>

<% if object.errors.any? %>
  <div class="card border-danger mb-3 error-card" >
    <div class="card-header "><strong>Lights Out! </strong> The form contains <%= pluralize(object.errors.count, 'error') %> </div>
    <div class="card-body">
     
        <ul class="error-messages">
          <% object.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
          <% end%>
        </ul>
      
    </div>
  </div>
<% end %>